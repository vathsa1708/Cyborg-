<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#041c39"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context="com.example.cyborg.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Question number:"
        android:id="@+id/QuestionNo"
        android:textSize="14dp"
        android:fontFamily="@font/monbol"
        android:textColor="#ffffff"
        />
    <ImageView
        android:id="@+id/imgans"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/find"
        android:layout_marginTop="60dp" />
    <TextView
        android:id="@+id/questionans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgans"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="This will be the question"
        android:fontFamily="@font/monbol"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/choices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionans"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/ansshape"
        android:fontFamily="@font/monsem"
        android:paddingLeft="50dp"
        android:paddingTop="20dp"
        android:paddingRight="50dp"
        android:paddingBottom="20dp"
        android:text="Answer :"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:textColor="@color/black"
        android:backgroundTint="#ffffff"
        android:fontFamily="@font/monbol"
        android:layout_below="@+id/choices"
        android:layout_marginTop="20dp"
        android:id="@+id/prev"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@color/black"
        android:backgroundTint="#ffffff"
        android:fontFamily="@font/monbol"
        android:layout_below="@+id/prev"
        android:layout_marginTop="20dp"
        android:id="@+id/next"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="exit"
        android:textColor="@color/black"
        android:backgroundTint="#ffffff"
        android:fontFamily="@font/monbol"
        android:layout_below="@+id/next"
        android:layout_marginTop="20dp"
        android:id="@+id/exit"
        android:onClick="Exit1"
        />
</RelativeLayout>
</ScrollView>