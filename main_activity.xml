<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#041C39"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        tools:context="com.example.cyborg.MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/Toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:background="@drawable/hello"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cyborg"
                    android:textColor="#5FB9E8"
                    android:textSize="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/Lidques"
            android:orientation="vertical"
            android:background="@drawable/shape"
            android:layout_below="@+id/Toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/Start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Toolbar"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/monbol"
                android:text="Would you like to take a Cybercrime Knowledge Quiz?"
                android:textColor="@color/white"
                android:textSize="16dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Start"
                android:layout_marginTop="25dp"
                android:textSize="11dp"
                android:text="Click to start"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="StartQuiz"
                android:fontFamily="@font/monsem"
                android:id="@+id/BtnClick"
                android:layout_marginStart="90dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Lidcat"
            android:orientation="vertical"
            android:layout_below="@+id/Lidques"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape">
            <TextView
                android:id="@+id/Code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="Categories of Cyber Crimes:"
                android:fontFamily="@font/monbol"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fillViewport="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="142dp"
                        android:layout_below="@+id/Code"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/btnshape"
                        android:onClick="Scams"
                        android:orientation="vertical"
                        android:id="@+id/Lid1"
                        >
                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="90dp"
                            android:background="@drawable/hack5"
                            android:onClick="Scams"
                            android:id="@+id/Img1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/monsem"
                            android:text="Phishing Scams"
                            android:textColor="@color/black"
                            android:layout_marginStart="90dp"
                            android:textSize="14dp"
                            android:onClick="Scams"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_below="@+id/Lid1"
                        android:layout_margin="15dp"
                        android:background="@drawable/btnshape"
                        android:orientation="vertical"
                        android:id="@+id/Lid2"
                        android:onClick="Fraud"
                        >
                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="90dp"
                            android:background="@drawable/hack4"
                            android:onClick="Fraud"
                            android:id="@+id/Img2"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/monsem"
                            android:text="Internet fraud"
                            android:textColor="@color/black"
                            android:layout_marginStart="95dp"
                            android:textSize="14dp"
                            android:onClick="Fraud"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_below="@+id/Lid2"
                        android:layout_margin="15dp"
                        android:background="@drawable/btnshape"
                        android:orientation="vertical"
                        android:id="@+id/Lid3"
                        android:onClick="OnlineInt"
                        >
                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="90dp"
                            android:background="@drawable/hack2"
                            android:onClick="OnlineInt"
                            android:id="@+id/Img3"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/monsem"
                            android:text="Online intellectual property infringements"
                            android:textColor="@color/black"
                            android:layout_marginStart="40dp"
                            android:textSize="14dp"
                            android:onClick="OnlineInt"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_below="@+id/Lid3"
                        android:background="@drawable/btnshape"
                        android:layout_margin="15dp"
                        android:orientation="vertical"
                        android:id="@+id/Lid4"
                        >
                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="110dp"
                            android:layout_marginStart="90dp"
                            android:background="@drawable/hack1"
                            android:onClick="Identity"
                            android:id="@+id/Img4"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/monsem"
                            android:text="Identity theft"
                            android:textColor="@color/black"
                            android:layout_marginStart="100dp"
                            android:textSize="14dp"
                            android:onClick="Identity"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_below="@+id/Lid4"
                        android:background="@drawable/btnshape"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical"
                        android:id="@+id/Lid5"
                        >
                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="90dp"
                            android:background="@drawable/hack3"
                            android:onClick="OnlineHar"
                            android:id="@+id/Img5"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/monsem"
                            android:text="Online harassment and cyberstalking"
                            android:textColor="@color/black"
                            android:layout_marginStart="40dp"
                            android:textSize="15dp"
                            android:onClick="OnlineHar"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>