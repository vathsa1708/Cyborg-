<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#041C32"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context="com.example.cyborg.MainActivity"
    android:onClick="Exit1">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="@drawable/hello"
        android:id="@+id/finalimg"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Anywhere to go to Home"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:fontFamily="@font/monbol"
        android:layout_below="@+id/finalimg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
</RelativeLayout>