    <ImageView
        android:id="@+id/resimage"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hello"
        android:layout_marginTop="60dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ResBtn1"
        android:textColor="@color/black"
        android:layout_below="@+id/Lidres"
        android:layout_marginTop="30dp"
        android:text="Restart"
        android:backgroundTint="#ffffff"
        android:fontFamily="@font/monsem"
        android:textSize="14dp"
        android:onClick="restartQuiz"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Viewans"
        android:textColor="@color/black"
        android:layout_below="@+id/ResBtn1"
        android:layout_marginTop="30dp"
        android:text="View Answers"
        android:backgroundTint="#ffffff"
        android:fontFamily="@font/monsem"
        android:textSize="14dp"
        android:onClick="Answers"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ResBtn2"
        android:textColor="@color/black"
        android:layout_below="@+id/Viewans"
        android:layout_marginTop="30dp"
        android:text="Exit"
        android:backgroundTint="#ffffff"
        android:fontFamily="@font/monsem"
        android:textSize="14dp"
