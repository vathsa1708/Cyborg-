<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#041c32"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context="com.example.cyborg.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape"
            android:padding="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Online intellectual property infringements:"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/monbol"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Intellectual property infringements vary from the sale of counterfeit or replica goods, content piracy, patent infringement and more. In the following article you can find a full list of every intellectual property infringement type."
        android:textColor="@color/white"
        android:textSize="14dp"
        android:fontFamily="@font/monsem"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="1. Counterfeit and replica goods: Product created to look identical to an existing product made by a third partyâ€™s brand; while counterfeits are branded, replicas are not."
        android:textColor="@color/white"
        android:textSize="14dp"
        android:fontFamily="@font/monsem"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="2. Piracy: Piracy is the unauthorized reproduction, copying and spreading of copyrighted materials."
        android:textColor="@color/white"
        android:textSize="14dp"
        android:fontFamily="@font/monsem"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="3. Patent infringement: These are products which exactly copy the functionality and mechanism of products protected by utility patents."
        android:textColor="@color/white"
        android:textSize="14dp"
        android:fontFamily="@font/monsem"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="How to protect your brand against online intellectual property infringements"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:onClick="OnlineIntSol"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Back"
        android:onClick="Exit3"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:fontFamily="@font/monbol"/>
        </LinearLayout>
</RelativeLayout>
</ScrollView>